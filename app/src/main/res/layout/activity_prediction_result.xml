<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@color/white"
    tools:context=".PredictionResultActivity">

    <!-- Logo Section -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_leaf_logo"
        android:contentDescription="Logo"
        app:tint="@color/green_primary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyHealthPredictor"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Anda &amp; Saran"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/green_on_surface"
        android:layout_marginTop="24dp"/>

    <!-- Result Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/green_primary_variant"
        app:strokeWidth="4dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tingkat Obesitas Anda:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat Badan\nNormal"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/green_on_surface"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Suggestion Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saran Singkat"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"/>

    <!-- Suggestion Item 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="top">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="@color/green_primary_variant"
            android:background="@drawable/circle_background_light_green"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pertahankan pola makan sehat\n(targetkan 3 porsi sayuran/hari)."
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Suggestion Item 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="top">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_directions"
            app:tint="@color/green_primary_variant"
            android:background="@drawable/circle_background_light_green"
            android:padding="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tingkatkan aktivitas fisik (targetkan\njalan kaki 30 menit setiap hari)."
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Buttons -->
    <Button
        android:id="@+id/btn_restart"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Mulai Baru"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        android:backgroundTint="@color/green_secondary"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="Selesai"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="28dp"
        android:backgroundTint="@android:color/transparent"
        app:strokeColor="@color/green_secondary"
        app:strokeWidth="2dp"
        android:textColor="@color/green_secondary"/>

</LinearLayout>
