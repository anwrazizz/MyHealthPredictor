<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prediction_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    android:fillViewport="true"
    tools:context=".Prediction.PredictionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:paddingBottom="48dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back_arrow"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediksi Obesitas"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@id/btn_back"
                app:layout_constraintTop_toBottomOf="@id/btn_back" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi data diri Anda untuk analisa AI"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.8"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-24dp"
            android:paddingHorizontal="16dp">

            <!-- Group: Data Diri -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            app:tint="@color/green_primary"
                            android:background="@drawable/circle_bg_soft_green"
                            android:padding="6dp"/>
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Fisik"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_title"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:textSize="14sp"
                        android:textColor="@color/text_body" />

                    <RadioGroup
                        android:id="@+id/rg_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <RadioButton
                            android:id="@+id/rb_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pria"
                            android:layout_weight="1"/>

                        <RadioButton
                            android:id="@+id/rb_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wanita"
                            android:layout_weight="1"/>
                    </RadioGroup>
                    
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/divider" android:layout_marginVertical="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Usia"
                            app:boxBackgroundColor="@color/green_background"
                            app:boxStrokeWidth="0dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Tinggi (m)"
                            app:boxBackgroundColor="@color/green_background"
                            app:boxStrokeWidth="0dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                        
                         <Space android:layout_width="12dp" android:layout_height="wrap_content"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Berat (kg)"
                            app:boxBackgroundColor="@color/green_background"
                            app:boxStrokeWidth="0dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_weight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_family_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ada riwayat keluarga obesitas"
                        android:layout_marginTop="12dp" 
                        android:textColor="@color/text_body"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Group: Kebiasaan Makan -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="20dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/green_primary"
                            android:background="@drawable/circle_bg_soft_green"
                            android:padding="6dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pola Makan"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_title"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_favc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sering makan tinggi kalori"
                        android:textColor="@color/text_body"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Konsumsi Sayuran (FCVC)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_fcvc"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/fcvc_options"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Makan Besar Harian (NCP)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_ncp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/ncp_options" 
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngemil (CAEC)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_caec"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/caec_options" 
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp"/>
                
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minum Air Putih (CH2O)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_ch2o"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/ch2o_options"
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alkohol (CALC)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_calc"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/calc_options" 
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Group: Gaya Hidup -->
             <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_day"
                            app:tint="@color/green_primary"
                            android:background="@drawable/circle_bg_soft_green"
                            android:padding="6dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gaya Hidup"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_title"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_smoke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Merokok" 
                        android:textColor="@color/text_body"/>

                    <CheckBox
                        android:id="@+id/cb_scc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rutin pantau kalori" 
                        android:textColor="@color/text_body"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frekuensi Olahraga (FAF)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_faf"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/faf_options" 
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Gadget (TUE)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_tue"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/tue_options" 
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transportasi (MTRANS)"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/text_body"/>
                    <Spinner
                        android:id="@+id/sp_mtrans"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/mtrans_options" 
                        android:background="@drawable/bg_spinner"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_predict"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginVertical="32dp"
                android:text="Analisa Sekarang"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                android:backgroundTint="@color/green_primary"
                android:elevation="8dp"
                android:stateListAnimator="@null"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
