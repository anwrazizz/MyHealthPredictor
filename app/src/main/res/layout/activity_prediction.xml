<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prediction_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_background"
    android:fillViewport="true"
    tools:context=".PredictionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="32dp">
            
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Kembali"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediksi Obesitas"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi kuesioner berikut dengan jujur"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.8"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Group: Data Diri -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Diri"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary_variant"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Gender -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Perempuan" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Age -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Usia"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Space android:layout_width="16dp" android:layout_height="wrap_content"/>

                    <!-- Height -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Tinggi (m)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Weight -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Berat Badan (kg)"
                    android:layout_marginTop="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/cb_family_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Riwayat Keluarga dengan Obesitas"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group: Kebiasaan Makan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kebiasaan Makan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary_variant"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cb_favc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sering Konsumsi Makanan Tinggi Kalori" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konsumsi Sayuran (FCVC)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_fcvc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/fcvc_options" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makan Utama per Hari (NCP)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_ncp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/ncp_options" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kebiasaan Ngemil (CAEC)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_caec"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/caec_options" />
                
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konsumsi Air Putih (CH2O)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_ch2o"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/ch2o_options" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konsumsi Alkohol (CALC)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_calc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/calc_options" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Group: Gaya Hidup -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaya Hidup"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary_variant"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/cb_smoke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Merokok" />

                <CheckBox
                    android:id="@+id/cb_scc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memantau Konsumsi Kalori" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frekuensi Aktivitas Fisik (FAF)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_faf"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/faf_options" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durasi Menggunakan Teknologi (TUE)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_tue"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/tue_options" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transportasi Utama (MTRANS)"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/sp_mtrans"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:entries="@array/mtrans_options" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_predict"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="32dp"
            android:text="Mulai Prediksi"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            android:backgroundTint="@color/green_primary"/>

    </LinearLayout>
</ScrollView>
